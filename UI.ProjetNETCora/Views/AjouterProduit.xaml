<Window x:Class="UI.ProjetNETCora.Views.AjouterProduit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Produit" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalAlignment="Stretch" Background="AliceBlue" FontWeight="Bold">AJOUTER PRODUIT</Label>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label>Code </Label>
            <TextBox Text="{Binding Code}"></TextBox>
            <Label>Libelle </Label>
            <TextBox Text="{Binding Libelle}"></TextBox>
            <Label>Description</Label>
            <TextBox Text="{Binding Description}"></TextBox>
            <Label>Actif</Label>
            <TextBox Text="{Binding Actif}"></TextBox>
            <Label>Stock</Label>
            <TextBox Text="{Binding Stock}"></TextBox>
            <Label>Prix</Label>
            <TextBox Text="{Binding Prix}"></TextBox>
            <Label>Categorie</Label>
            <TextBox Text="{Binding Categorie}"></TextBox>
        </StackPanel>

        <Button Margin="5" Grid.Row="2" FontSize="12px" Background="DarkCyan" Command="{Binding BtnAddProduit}">Ajouter Produit</Button>
    </Grid>
</Window>