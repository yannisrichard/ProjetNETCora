<UserControl x:Class="UI.ProjetNETCora.Views.ListeProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:UI.ProjetNETCora.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListView Grid.Column="0"  Grid.Row="0" Grid.RowSpan="3" Margin="5px" ItemsSource="{Binding Produits, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedProduit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="80px" Header="Code" DisplayMemberBinding="{Binding Code}" />
                    <GridViewColumn Width="80px" Header="Libelle" DisplayMemberBinding="{Binding Libelle}" />
                    <GridViewColumn Width="100px" Header="Stock" DisplayMemberBinding="{Binding Stock}" />
                </GridView>
            </ListView.View>
        </ListView>
        
        <!--<DataGrid Grid.Column="0"  Grid.Row="0" Grid.RowSpan="3" AutoGenerateColumns="False" ItemsSource="{Binding Produits, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedProduit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectionMode="Extended" Background="AliceBlue" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" IsReadOnly="True" Binding="{Binding Code}" Width="*"  />
                <DataGridTextColumn Header="Libelle" IsReadOnly="True" Binding="{Binding Libelle}" Width="*" />
                <DataGridTextColumn Header="Stock" IsReadOnly="True" Binding="{Binding Stock}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>-->
        
        <!--<my:DetailProduit DataContext="{Binding SelectedProduit, UpdateSourceTrigger=PropertyChanged}"></my:DetailProduit>-->
    </Grid>
</UserControl>
