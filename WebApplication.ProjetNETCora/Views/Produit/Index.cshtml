@using Modele.ProjetNETCora.Entities;
@using BusinessLayer.ProjetNETCora;
@model List<Produit>
@{
    ViewBag.Title = "Page d'accueil";
}

    <h2>@ViewBag.Title.</h2>
    <div class="container">
        @using (Html.BeginForm("Recherche", "Produit", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <p>
                Selectionner Categories: @Html.DropDownList("Categories", "All")
                Selectionner Nom: @Html.TextBox("Nom")
                <input type="submit" class="btn btn-default" value="Rechercher" />
            </p>
        }


        <div>
            <table class="table table-striped table-bordered">
                <tr>
                    <th class="text-center">Actions</th>
                    <th class="text-center">Categorie ID</th>
                    <th class="text-center">Code</th>
                    <th class="text-center">Libelle</th>
                    <th class="text-center">Stock</th>
                </tr>
                @foreach (Produit p in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = p.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = p.Id })
                        </td>
                        <td>
                            @p.CategorieId
                        </td>
                        <td>
                            @p.Code
                        </td>
                        <td>
                            @p.Libelle
                        </td>
                        <td>
                            @p.Stock
                        </td>
                    </tr>
                }
            </table>

            <p>
                @Html.ActionLink("Créer nouveau produit", "Create")
            </p>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
